@{
    ViewBag.Title = "Kajak kanu klub Žusterna";
}

<div class="span12">
    
    @if (KKK_Zusterna.Models.GlobalErrors.seznamNapak != null && KKK_Zusterna.Models.GlobalErrors.seznamNapak.Count > 0)
    {
        foreach (string napaka in KKK_Zusterna.Models.GlobalErrors.seznamNapak)
        {
            <div class="row-fluid">
                <div class="span12">
                    <div class="alert alert-error">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <strong>Napaka!</strong><br /> @napaka
                    </div> 
                </div>
            </div> 
        }
    }
    
    @if (KKK_Zusterna.Models.GlobalWarnings.seznamOpozoril != null && KKK_Zusterna.Models.GlobalWarnings.seznamOpozoril.Count > 0)
    {
        foreach (string opozorilo in KKK_Zusterna.Models.GlobalWarnings.seznamOpozoril)
        {
            <div class="row-fluid">
                <div class="span12">
                    <div class="alert alert-info">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <strong>Opozorilo!</strong><br /> @opozorilo
                    </div> 
                </div>
            </div> 
        }
    }
    
    @if (KKK_Zusterna.Models.GlobalNotifications.seznamObvestil != null && KKK_Zusterna.Models.GlobalNotifications.seznamObvestil.Count > 0)
    {
        foreach (string obvestilo in KKK_Zusterna.Models.GlobalNotifications.seznamObvestil)
        {
            <div class="row-fluid">
                <div class="span12">
                    <div class="alert alert-success">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <strong>Opravljeno! </strong>@obvestilo 
                    </div>
                </div>
            </div>
        }
    }    

    @if (ViewBag.Data != null)
    {
        <div class="row-fluid">
            <div class="span12">
                <div class="row-fluid">
                    <div class="span12">
                        <h3>Uredi kontaktne informacije</h3>    
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span12">
                        <legend>Podatki</legend>    
                    </div>
                </div>
                @using (Html.BeginForm("UpdateKontakt", "Administracija", FormMethod.Post))
                {
                    <div class="row-fluid">
                        <div class="span4">
                            <label>ID:</label>
                            @Html.TextBox("ID_Kontakt", (int)ViewBag.Data.ID_Kontakt, new { placeholder = "ID kontakt ...", @readonly = "readonly", @class = "input-block-level" }) 
                        </div>
                        <div class="span4">
                            <label>Spremenil:</label>
                            @Html.TextBox("Spremenil", (string)ViewBag.Data.Spremenil, new { placeholder = "Spremenil ...", @readonly = "readonly", @class = "input-block-level" }) 
                        </div>
                        <div class="span4">
                            <label>Datum spremembe:</label>
                            @Html.TextBox("SpremenilDatum", (DateTime)ViewBag.Data.SpremenilDatum, new { placeholder = "Datum spremembe ...", @readonly = "readonly", @class = "input-block-level" }) 
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12">
                            <label>Vpišite email:</label>
                            <input class="input-block-level" type="text" name="Email" placeholder="e-mail ..." value="@ViewBag.Data.Email" />
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12">
                            <label>Vpišite številko tel.:</label>
                            <input class="input-block-level" type="text" name="Telefon" placeholder="Telefon ..." value="@ViewBag.Data.Telefon" />
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12">
                            <label>Vpišite številko fax:</label>
                            <input class="input-block-level" type="text" name="Fax" placeholder="Fax ..." value="@ViewBag.Data.Fax" />
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12">
                            <label>Vpišite številko GSM:</label>
                            <input class="input-block-level" type="text" name="GSM" placeholder="GSM ..." value="@ViewBag.Data.GSM" />
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12">
                            <label>Vpišite naslov:</label>
                            <input class="input-block-level" type="text" name="Naslov" placeholder="Naslov ..." value="@ViewBag.Data.Naslov"/>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12">
                            <legend>Operacije</legend>    
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group">
                                <div class="controls">
                                    <button class="btn btn-primary" type="submit"><i class="icon-edit icon-white"></i>  Uredi</button>
                                    <a class="btn btn-danger" href="@Url.Action("DeleteKontakt", "Administracija")"><i class="icon-trash icon-white"></i>  Izbriši</a>  
                                    <a class="btn" href="@Url.Action("Index", "Home")"><i class="icon-remove"></i>  Zapri</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="row-fluid">
            <div class="span12">
                <div class="row-fluid">
                    <div class="span12">
                        <h3>Vnesi kontaktne informacije</h3>    
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span12">
                        <legend>Podatki</legend>    
                    </div>
                </div>
                @using (Html.BeginForm("InsertKontakt", "Administracija", FormMethod.Post))
                {
                    <div class="row-fluid">
                        <div class="span12">
                            <label>Vpišite email:</label>
                            <input class="input-block-level" type="text" name="Email" placeholder="e-mail ..." />
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12">
                            <label>Vpišite številko tel.:</label>
                            <input class="input-block-level" type="text" name="Telefon" placeholder="Telefon ..." />
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12">
                            <label>Vpišite številko fax:</label>
                            <input class="input-block-level" type="text" name="Fax" placeholder="Fax ..." />
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12">
                            <label>Vpišite številko GSM:</label>
                            <input class="input-block-level" type="text" name="GSM" placeholder="GSM ..." />
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12">
                            <label>Vpišite naslov:</label>
                            <input class="input-block-level" type="text" name="Naslov" placeholder="Naslov ..." />
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12">
                            <legend>Operacije</legend>    
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group">
                                <div class="controls">
                                    <button class="btn btn-primary" type="submit"><i class="icon-edit icon-white"></i>  Shrani</button>  
                                    <a class="btn" href="@Url.Action("Index", "Home")"><i class="icon-remove"></i>  Zapri</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
      
</div>
