@{
    ViewBag.Title = "Kajak kanu klub Žusterna";
}

<div class="span12">
    
    @if (KKK_Zusterna.Models.GlobalErrors.seznamNapak != null && KKK_Zusterna.Models.GlobalErrors.seznamNapak.Count > 0)
    {
        foreach (string napaka in KKK_Zusterna.Models.GlobalErrors.seznamNapak)
        {
            <div class="row-fluid">
                <div class="span12">
                    <div class="alert alert-error">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <strong>Napaka!</strong><br /> @napaka
                    </div> 
                </div>
            </div> 
        }
    }
    
    @if (KKK_Zusterna.Models.GlobalWarnings.seznamOpozoril != null && KKK_Zusterna.Models.GlobalWarnings.seznamOpozoril.Count > 0)
    {
        foreach (string opozorilo in KKK_Zusterna.Models.GlobalWarnings.seznamOpozoril)
        {
            <div class="row-fluid">
                <div class="span12">
                    <div class="alert alert-info">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <strong>Opozorilo!</strong><br /> @opozorilo
                    </div> 
                </div>
            </div> 
        }
    }
    
    @if (KKK_Zusterna.Models.GlobalNotifications.seznamObvestil != null && KKK_Zusterna.Models.GlobalNotifications.seznamObvestil.Count > 0)
    {
        foreach (string obvestilo in KKK_Zusterna.Models.GlobalNotifications.seznamObvestil)
        {
            <div class="row-fluid">
                <div class="span12">
                    <div class="alert alert-success">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <strong>Opravljeno! </strong>@obvestilo 
                    </div>
                </div>
            </div>
        }
    }    

    <div class="row-fluid">
        <div class="span12">
            <div class="row-fluid">
                <h3>Pregled galerij slik</h3>        
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <legend>Filtri</legend>
                </div>
            </div>
            @using (Html.BeginForm("FindGalerijaKategorija", "Administracija", FormMethod.Post))
            {
                <div class="row-fluid">
                    <div class="span3">
                        <label>Vpišite ID:</label>
                        <input name="IDGalerijaKategorijaFilter" type="text" width="100%" placeholder="ID ..." class="input-block-level"/>
                    </div>
                    <div class="span3">
                        <label>Vpišite naslov:</label>
                        <input name="NaslovGalerijaKategorija" type="text" width="100%" placeholder="Naslov ..." class="input-block-level"/>
                    </div>
                    <div class="span3">
                        <div class="span12">
                            <div class="control-group">
                                <div class="controls">
                                    <button class="btn btn-primary" style="margin-top: 24px" type="submit"><i class="icon-search icon-white"></i>  Najdi</button> 
                                    <a class="btn btn-primary" style="margin-top: 24px" href="@Url.Action("GalerijaKategorijaPodrobnosti", "Administracija", new { ID_galerijaKategorija = 0 })"><i class="icon-plus icon-white"></i>  Dodaj</a> 
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="span3"></div>
                </div>
            }
            <div class="row-fluid">
                <div class="span12">
                    <legend>Zadetki</legend>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <td><strong>#</strong></td>
                                <td><strong>Naslov</strong></td>
                                <td><strong>Spremenil</strong></td>
                                <td><strong>Datum spremembe</strong></td>
                            </tr>
                        </thead>
                        <tbody data-link="row" class="rowlink">
                            @if (ViewBag.Data != null && ViewBag.Data.Count > 0)
                            {
                                for (int i = 0; i < ViewBag.Data.Count; i++)
                                {
                                    if (i % 2 == 0)
                                    {
                                        <tr class="success">
                                            <td><a href="@Url.Action("GalerijaKategorijaPodrobnosti", "Administracija", new { ID_galerijaKategorija = ViewBag.Data[i].ID_galerijaKategorija })">@ViewBag.Data[i].ID_galerijaKategorija</a></td>
                                            <td>@ViewBag.Data[i].Naslov</td>
                                            <td>@ViewBag.Data[i].SpremenilUporabnik</td>
                                            <td>@ViewBag.Data[i].SpremenilDatum</td>
                                        </tr>
                                    }
                                    else
                                    {
                                        <tr class="info">
                                            <td><a href="@Url.Action("GalerijaKategorijaPodrobnosti", "Administracija", new { ID_galerijaKategorija = ViewBag.Data[i].ID_galerijaKategorija })">@ViewBag.Data[i].ID_galerijaKategorija</a></td>
                                            <td>@ViewBag.Data[i].Naslov</td>
                                            <td>@ViewBag.Data[i].SpremenilUporabnik</td>
                                            <td>@ViewBag.Data[i].SpremenilDatum</td>
                                        </tr>
                                    }
                                }
                            }
                        </tbody>
                    </table>        
                </div>     
            </div>
        </div>
    </div>  
</div>
