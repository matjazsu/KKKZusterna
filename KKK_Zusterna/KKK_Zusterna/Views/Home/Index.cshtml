@{
    ViewBag.Title = "Kajak kanu klub Žusterna";
}

<div class="span12">
    
    @if (KKK_Zusterna.Models.GlobalErrors.seznamNapak != null && KKK_Zusterna.Models.GlobalErrors.seznamNapak.Count > 0)
    {
        foreach (string napaka in KKK_Zusterna.Models.GlobalErrors.seznamNapak)
        {
            <div class="row-fluid">
                <div class="span12">
                    <div class="alert alert-error">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <strong>Napaka!</strong><br /> @napaka
                    </div> 
                </div>
            </div> 
        }
    }
    
    @if (KKK_Zusterna.Models.GlobalWarnings.seznamOpozoril != null && KKK_Zusterna.Models.GlobalWarnings.seznamOpozoril.Count > 0)
    {
        foreach (string opozorilo in KKK_Zusterna.Models.GlobalWarnings.seznamOpozoril)
        {
            <div class="row-fluid">
                <div class="span12">
                    <div class="alert alert-info">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <strong>Opozorilo!</strong><br /> @opozorilo
                    </div> 
                </div>
            </div> 
        }
    }

    @if (KKK_Zusterna.Models.GlobalNotifications.seznamObvestil != null && KKK_Zusterna.Models.GlobalNotifications.seznamObvestil.Count > 0)
    {
        foreach (string obvestilo in KKK_Zusterna.Models.GlobalNotifications.seznamObvestil)
        {
            <div class="row-fluid">
                <div class="span12">
                    <div class="alert alert-success">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <strong>Opravljeno! </strong>@obvestilo 
                    </div>
                </div>
            </div>
        }
    }

    @if (ViewBag.Data != null && ViewBag.Data.Count > 0)
    {
        <div class="row-fluid">
            <div class="span12">
                <h3>Domov</h3>
            </div>  
        </div> 
        
        for (int i = 0; i < ViewBag.Data.Count; i++)
        {
            <div class="row-fluid">
                <div class="span12">

                    <div class="row-fluid">
                    @if (ViewBag.Data[i].URLSlika != "")
                    {
                        <div class="span3">
                            <ul class="thumbnails">
                                <li class="span12">
                                    <a href="@Url.Content(@ViewBag.Data[i].URLSlika)" rel="lightbox" title="" class="thumbnail">
                                        <img src="@Url.Content(@ViewBag.Data[i].URLSlika)" alt="" width="100%" height="100%">
                                    </a>
                                </li>
                            </ul>
                        </div>

                        <div class="span9">
                            <div class="row-fluid">
                                <div class="span12">
                                    <h4><a href="@Url.Action("PrikaziNovico", "Home", new { ID_novica = ViewBag.Data[i].ID_novica })">@(new HtmlString(ViewBag.Data[i].Naslov))</a></h4>
                                </div>
                            </div>
                            <div class="row-fluid">
                                <div class="span12">
                                    <p>@(new HtmlString(ViewBag.Data[i].Povzetek))</p>
                                </div>
                            </div>
                            <div class="row-fluid">
                                <div class="span12"></div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="row-fluid">
                            <div class="span12">
                                <h4><a href="@Url.Action("PrikaziNovico", "Home", new { ID_novica = ViewBag.Data[i].ID_novica })">@(new HtmlString(ViewBag.Data[i].Naslov))</a></h4>
                            </div>
                        </div>
                        <div class="row-fluid">
                            <div class="span12">
                                <p>@(new HtmlString(ViewBag.Data[i].Povzetek))</p>
                            </div>
                        </div>
                        <div class="row-fluid">
                            <div class="span12"></div>
                        </div>
                    }
                    </div>  

                    @if (i < ViewBag.Data.Count - 1)
                    {
                        <div class="row-fluid">
                            <div class="span12">
                                <hr style="margin-top: -3px" />
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="row-fluid">
                            <div class="span12"></div>
                        </div>   
                    }
                </div>
            </div>
        }
    }
    else
    {
        <div class="row-fluid">
            <div class="span12">
                <div class="alert alert-info">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <strong>Opozorilo!</strong> Ni dodanih novic.
                </div> 
            </div>
        </div>
        
        <div class="row-fluid">
            <div class="span12">
                <h3>Domov</h3>
            </div>  
        </div> 
    }
      
</div>