@model Tuple<KKK_Zusterna.Models.Novica, List<KKK_Zusterna.Models.NovicaPriloga>>

@{
    ViewBag.Title = "Kajak kanu klub Žusterna";
}

<div class="span12">
    
    @if (KKK_Zusterna.Models.GlobalErrors.seznamNapak != null && KKK_Zusterna.Models.GlobalErrors.seznamNapak.Count > 0)
    {
        foreach (string napaka in KKK_Zusterna.Models.GlobalErrors.seznamNapak)
        {
            <div class="row-fluid">
                <div class="span12">
                    <div class="alert alert-error">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <strong>Napaka!</strong><br /> @napaka
                    </div> 
                </div>
            </div> 
        }
    }
    
    @if (KKK_Zusterna.Models.GlobalWarnings.seznamOpozoril != null && KKK_Zusterna.Models.GlobalWarnings.seznamOpozoril.Count > 0)
    {
        foreach (string opozorilo in KKK_Zusterna.Models.GlobalWarnings.seznamOpozoril)
        {
            <div class="row-fluid">
                <div class="span12">
                    <div class="alert alert-info">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <strong>Opozorilo!</strong><br /> @opozorilo
                    </div> 
                </div>
            </div> 
        }
    }
    
    @if (KKK_Zusterna.Models.GlobalNotifications.seznamObvestil != null && KKK_Zusterna.Models.GlobalNotifications.seznamObvestil.Count > 0)
    {
        foreach (string obvestilo in KKK_Zusterna.Models.GlobalNotifications.seznamObvestil)
        {
            <div class="row-fluid">
                <div class="span12">
                    <div class="alert alert-success">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <strong>Opravljeno! </strong>@obvestilo 
                    </div>
                </div>
            </div>
        }
    }  
      
    @if (Model.Item1 != null)
    {
        <ul class="breadcrumb alert alert-info">
          <li><a href="@Url.Action("Index", "Home")">Novice</a> <span class="divider">/</span></li>
          <li class="active">@(new HtmlString(Model.Item1.Naslov))</li>
        </ul>
        
        <div class="row-fluid">
            <div class="span12">
                @if (Model.Item1.URLSlika != "")
                {
                    <div class="row-fluid">
                        <div class="span3">
                            <ul class="thumbnails">
                                <li class="span12">
                                    <a href="@Url.Content(Model.Item1.URLSlika)" rel="lightbox" class="thumbnail">
                                        <img class="lazy" data-original="@Url.Content(Model.Item1.URLSlika)" alt="" width="100%" height="100%">
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <div class="span9">
                            <div class="row-fluid">
                                <div class="span12">
                                    <h3>@(new HtmlString(Model.Item1.Naslov))</h3>
                                </div>
                            </div>
                            <div class="row-fluid">
                                <div class="span12">
                                    <span class="muted">@(new HtmlString(Model.Item1.Povzetek))</span>
                                </div>        
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="row-fluid">
                        <div class="span12">
                            <h3>@(new HtmlString(Model.Item1.Naslov))</h3>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12">
                            <span class="muted">@(new HtmlString(Model.Item1.Povzetek))</span>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12">
                        </div>
                    </div>
                }
                <div class="row-fluid">
                    <div class="span12">
                        <p>@(new HtmlString(Model.Item1.Vsebina))</p>
                    </div>
                </div>
                @if (Model.Item2 != null && Model.Item2.Count > 0)
                {
                    <div class="row-fluid">
                        <div class="span12">
                            <legend>Priloge:</legend>
                        </div>
                    </div>
                    foreach (var priloga in Model.Item2)
                    {
                        <div class="row-fluid">
                            <div class="span12">
                                <a href="@Url.Content(priloga.URLFile)"><i class="icon-chevron-right" style="margin-top: 1px"></i> @Url.Content(priloga.Naslov)</a>
                            </div>
                        </div>
                    }
                }
                <div class="row-fluid">
                    <div class="span12">
                        <legend>Informacije o novici:</legend>    
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span12">
                        <span class="muted">Objavil: @Model.Item1.Uporabnik</span>
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span12">
                        <span class="muted">Datum objave: @Model.Item1.DatumSpremenil</span>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row-fluid">
            <div class="alert alert-info">
                <strong>Opozorilo!</strong> Novica ne obstaja.
            </div>        
        </div>    
        
        <ul class="breadcrumb alert alert-info">
          <li><a href="@Url.Action("Index", "Home")">Novice</a> <span class="divider">/</span></li>
          <li class="active"></li>
        </ul>
    }
      
</div>
