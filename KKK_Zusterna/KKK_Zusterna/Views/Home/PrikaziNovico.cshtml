@{
    ViewBag.Title = "Kajak kanu klub Žusterna";
}

<div class="span12">
    
    @if (KKK_Zusterna.Models.GlobalErrors.seznamNapak != null && KKK_Zusterna.Models.GlobalErrors.seznamNapak.Count > 0)
    {
        foreach (string napaka in KKK_Zusterna.Models.GlobalErrors.seznamNapak)
        {
            <div class="row-fluid">
                <div class="span12">
                    <div class="alert alert-error">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <strong>Napaka!</strong><br /> @napaka
                    </div> 
                </div>
            </div> 
        }
    }
    
    @if (KKK_Zusterna.Models.GlobalWarnings.seznamOpozoril != null && KKK_Zusterna.Models.GlobalWarnings.seznamOpozoril.Count > 0)
    {
        foreach (string opozorilo in KKK_Zusterna.Models.GlobalWarnings.seznamOpozoril)
        {
            <div class="row-fluid">
                <div class="span12">
                    <div class="alert alert-info">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <strong>Opozorilo!</strong><br /> @opozorilo
                    </div> 
                </div>
            </div> 
        }
    }
    
    @if (KKK_Zusterna.Models.GlobalNotifications.seznamObvestil != null && KKK_Zusterna.Models.GlobalNotifications.seznamObvestil.Count > 0)
    {
        foreach (string obvestilo in KKK_Zusterna.Models.GlobalNotifications.seznamObvestil)
        {
            <div class="row-fluid">
                <div class="span12">
                    <div class="alert alert-success">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <strong>Opravljeno! </strong>@obvestilo 
                    </div>
                </div>
            </div>
        }
    }  
      
    @if (ViewBag.Data != null)
    {
        <div class="row-fluid">
            <div class="span12">
                @if (ViewBag.Data.URLSlika != "")
                {
                    <div class="row-fluid">
                        <div class="span3">
                            <ul class="thumbnails">
                                <li class="span12">
                                    <a href="@Url.Content(@ViewBag.Data.URLSlika)" rel="lightbox" class="thumbnail">
                                        <img src="@Url.Content(@ViewBag.Data.URLSlika)" alt="" width="100%" height="100%">
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <div class="span9">
                            <div class="row-fluid">
                                <div class="span12">
                                    <h3>@(new HtmlString(ViewBag.Data.Naslov))</h3>
                                </div>
                            </div>
                            <div class="row-fluid">
                                <div class="span12">
                                     <span class="muted">@(new HtmlString(ViewBag.Data.Povzetek))</span>
                                </div>        
                            </div>
                        </div>
                    </div>
                }
                else
                {
					<div class="row-fluid">
						<div class="span12">
							<h3>@(new HtmlString(ViewBag.Data.Naslov))</h3>
						</div>
					</div>
                    <div class="row-fluid">
                        <div class="span12">
                            <span class="muted">@(new HtmlString(ViewBag.Data.Povzetek))</span>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12">
                        </div>
                    </div>
                }
                <div class="row-fluid">
                    <div class="span12">
                        <p>@(new HtmlString(ViewBag.Data.Vsebina))</p>
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span12">
                        <legend>Informacije o novici:</legend>    
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span12">
                        <span class="muted">Objavil: @ViewBag.Data.Uporabnik</span>
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span12">
                        <span class="muted">Datum objave: @ViewBag.Data.DatumSpremenil</span>
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span12">
                        <legend>Operacije:</legend>    
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span12">
                        <a class="btn btn-primary" href="@Url.Action("Index", "Home")"><i class="icon-arrow-left icon-white"></i>  Nazaj</a>
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span12">
                        
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row-fluid">
            <h2>Novica - Napaka</h2>
        </div>
        <div class="row-fluid">
            <div class="alert alert-info">
                <strong>Opozorilo!</strong> Novica ne obstaja.
            </div>        
        </div>    
    }
      
</div>
