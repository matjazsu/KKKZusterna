@{
    ViewBag.Title = "Kajak kanu klub Žusterna";
}

<div class="span12">
    
    @if (KKK_Zusterna.Models.GlobalErrors.seznamNapak != null && KKK_Zusterna.Models.GlobalErrors.seznamNapak.Count > 0)
    {
        foreach (string napaka in KKK_Zusterna.Models.GlobalErrors.seznamNapak)
        {
            <div class="row-fluid">
                <div class="span12">
                    <div class="alert alert-error">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <strong>Napaka!</strong><br /> @napaka
                    </div> 
                </div>
            </div> 
        }
    }
    
    @if (KKK_Zusterna.Models.GlobalWarnings.seznamOpozoril != null && KKK_Zusterna.Models.GlobalWarnings.seznamOpozoril.Count > 0)
    {
        foreach (string opozorilo in KKK_Zusterna.Models.GlobalWarnings.seznamOpozoril)
        {
            <div class="row-fluid">
                <div class="span12">
                    <div class="alert alert-info">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <strong>Opozorilo!</strong><br /> @opozorilo
                    </div> 
                </div>
            </div> 
        }
    }
    
    @if (KKK_Zusterna.Models.GlobalNotifications.seznamObvestil != null && KKK_Zusterna.Models.GlobalNotifications.seznamObvestil.Count > 0)
    {
        foreach (string obvestilo in KKK_Zusterna.Models.GlobalNotifications.seznamObvestil)
        {
            <div class="row-fluid">
                <div class="span12">
                    <div class="alert alert-success">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <strong>Opravljeno! </strong>@obvestilo 
                    </div>
                </div>
            </div>
        }
    }  
    
    @if (ViewBag.Data != null && ViewBag.Data.Count > 0)
    {
        <div class="row-fluid">
            <div class="span12">
                <h3>Rezultati - @ViewBag.LetoRezultati.Leto</h3>
            </div>
        </div>
        
        for (int i = 0; i < ViewBag.Data.Count; i++)
        {
            <div class="row-fluid">
                <div class="span12">
                    <legend>@ViewBag.Data[i].Naslov:</legend>    
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <p>@(new HtmlString(ViewBag.Data[i].Vsebina))</p>    
                </div>
            </div>
            if (!string.IsNullOrEmpty(ViewBag.Data[i].URLFile))
            {
                <div class="row-fluid">
                    <div class="span12">
                        @if (!string.IsNullOrEmpty(ViewBag.Data[i].FileName))
                        {
                            <p>Priloga: <a href="@Url.Content(@ViewBag.Data[i].URLFile)">@ViewBag.Data[i].FileName</a></p>
                        }
                        else
                        {
                            <p>Priloga: <a href="@Url.Content(@ViewBag.Data[i].URLFile)">@ViewBag.Data[i].URLFile</a></p>
                        }
                    </div>
                </div>   
            }
            <div class="row-fluid">
                <div class="span12"></div>
            </div>
        }
        <div class="row-fluid">
            <div class="span12">
                <legend>Operacije:</legend>    
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12">
                <a class="btn btn-primary" href="@Url.Action("Rezultati", "Tekmovanja")"><i class="icon-arrow-left icon-white"></i>  Nazaj</a>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12">
                        
            </div>
        </div>
    }
    else
    {
        <div class="row-fluid">
            <div class="span12">
                <div class="alert alert-info">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <strong>Opozorilo!</strong> Ni dodanih rezultatov.
                </div>
            </div>
        </div>
        
        <div class="row-fluid">
            <div class="span12">
                <h3>Rezultati - @ViewBag.LetoRezultati.Leto</h3>
            </div>
        </div>
        
        <div class="row-fluid">
            <div class="span12">
                <legend>Operacije:</legend>    
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12">
                <a class="btn btn-primary" href="@Url.Action("Rezultati", "Tekmovanja")"><i class="icon-arrow-left icon-white"></i>  Nazaj</a>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12">
                        
            </div>
        </div>   
    }
    
      
</div>
