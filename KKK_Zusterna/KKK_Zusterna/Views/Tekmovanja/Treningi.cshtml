@{
    ViewBag.Title = "Kajak kanu klub Žusterna";
}

<div class="span12">
    
    @if (KKK_Zusterna.Models.GlobalErrors.seznamNapak != null && KKK_Zusterna.Models.GlobalErrors.seznamNapak.Count > 0)
    {
        foreach (string napaka in KKK_Zusterna.Models.GlobalErrors.seznamNapak)
        {
            <div class="row-fluid">
                <div class="span12">
                    <div class="alert alert-error">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <strong>Napaka!</strong><br /> @napaka
                    </div> 
                </div>
            </div> 
        }
    }
    
    @if (KKK_Zusterna.Models.GlobalWarnings.seznamOpozoril != null && KKK_Zusterna.Models.GlobalWarnings.seznamOpozoril.Count > 0)
    {
        foreach (string opozorilo in KKK_Zusterna.Models.GlobalWarnings.seznamOpozoril)
        {
            <div class="row-fluid">
                <div class="span12">
                    <div class="alert alert-info">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <strong>Opozorilo!</strong><br /> @opozorilo
                    </div> 
                </div>
            </div> 
        }
    }
    
    @if (KKK_Zusterna.Models.GlobalNotifications.seznamObvestil != null && KKK_Zusterna.Models.GlobalNotifications.seznamObvestil.Count > 0)
    {
        foreach (string obvestilo in KKK_Zusterna.Models.GlobalNotifications.seznamObvestil)
        {
            <div class="row-fluid">
                <div class="span12">
                    <div class="alert alert-success">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <strong>Opravljeno! </strong>@obvestilo 
                    </div>
                </div>
            </div>
        }
    }  
    
    @if (ViewBag.Data != null)
    {
        <div class="row-fluid">
            <div class="span12">
                <h3>Treningi</h3>
            </div>
        </div>

        for (int i = 0; i < ViewBag.Data.Count; i++)
        {
            <div class="row-fluid">
                <div class="span12">
                    <div class="row-fluid">
                        <div class="span12">
                            <legend><a href="#">@ViewBag.Data[i].Naziv</a></legend>    
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <td><strong>Dan</strong></td>
                                        <td><strong>Dop. ura</strong></td>
                                        <td><strong>Dop. trening</strong></td>
                                        <td><strong>Pop. ura</strong></td>
                                        <td><strong>Pop. trening</strong></td>
                                    </tr>
                                </thead> 
                                <tbody>
                                    <tr>
                                        <td>Ponedeljek</td>
                                        <td>@ViewBag.Data[i].Pon_Dop_Od - @ViewBag.Data[i].Pon_Dop_Do</td>
                                        <td>@ViewBag.Data[i].Pon_Dop_Tre</td>
                                        <td>@ViewBag.Data[i].Pon_Pop_Od - @ViewBag.Data[i].Pon_Pop_Do</td>
                                        <td>@ViewBag.Data[i].Pon_Pop_Tre</td>
                                    </tr>
                                    <tr>
                                        <td>Torek</td>
                                        <td>@ViewBag.Data[i].Tor_Dop_Od - @ViewBag.Data[i].Tor_Dop_Do</td>
                                        <td>@ViewBag.Data[i].Tor_Dop_Tre</td>
                                        <td>@ViewBag.Data[i].Tor_Pop_Od - @ViewBag.Data[i].Tor_Pop_Do</td>
                                        <td>@ViewBag.Data[i].Tor_Pop_Tre</td>
                                    </tr>
                                    <tr>
                                        <td>Sreda</td>
                                        <td>@ViewBag.Data[i].Sre_Dop_Od - @ViewBag.Data[i].Sre_Dop_Do</td>
                                        <td>@ViewBag.Data[i].Sre_Dop_Tre</td>
                                        <td>@ViewBag.Data[i].Sre_Pop_Od - @ViewBag.Data[i].Sre_Pop_Do</td>
                                        <td>@ViewBag.Data[i].Sre_Pop_Tre</td>
                                    </tr>
                                    <tr>
                                        <td>Četrtek</td>
                                        <td>@ViewBag.Data[i].Cet_Dop_Od - @ViewBag.Data[i].Cet_Dop_Do</td>
                                        <td>@ViewBag.Data[i].Cet_Dop_Tre</td>
                                        <td>@ViewBag.Data[i].Cet_Pop_Od - @ViewBag.Data[i].Cet_Pop_Do</td>
                                        <td>@ViewBag.Data[i].Cet_Pop_Tre</td>
                                    </tr>
                                    <tr>
                                        <td>Petek</td>
                                        <td>@ViewBag.Data[i].Pet_Dop_Od - @ViewBag.Data[i].Pet_Dop_Do</td>
                                        <td>@ViewBag.Data[i].Pet_Dop_Tre</td>
                                        <td>@ViewBag.Data[i].Pet_Pop_Od - @ViewBag.Data[i].Pet_Pop_Do</td>
                                        <td>@ViewBag.Data[i].Pet_Pop_Tre</td>
                                    </tr>
                                    <tr>
                                        <td>Sobota</td>
                                        <td>@ViewBag.Data[i].Sob_Dop_Od - @ViewBag.Data[i].Sob_Dop_Do</td>
                                        <td>@ViewBag.Data[i].Sob_Dop_Tre</td>
                                        <td>@ViewBag.Data[i].Sob_Pop_Od - @ViewBag.Data[i].Sob_Pop_Do</td>
                                        <td>@ViewBag.Data[i].Sob_Pop_Tre</td>
                                    </tr>
                                    <tr>
                                        <td>Nedelja</td>
                                        <td>@ViewBag.Data[i].Ned_Dop_Od - @ViewBag.Data[i].Ned_Dop_Do</td>
                                        <td>@ViewBag.Data[i].Ned_Dop_Tre</td>
                                        <td>@ViewBag.Data[i].Ned_Pop_Od - @ViewBag.Data[i].Ned_Pop_Do</td>
                                        <td>@ViewBag.Data[i].Ned_Pop_Tre</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="row-fluid">
            <div class="span12">
                <div class="alert alert-info">
                    <button type="button" class="close" data-dismiss="alert">
                        &times;</button>
                    <strong>Opozorilo!</strong> Ni dodanih treningov.
                </div>
            </div>
        </div>
        
        <div class="row-fluid">
            <div class="span12">
                <h3>Treningi</h3>
            </div>
        </div>
    }
      
</div>
