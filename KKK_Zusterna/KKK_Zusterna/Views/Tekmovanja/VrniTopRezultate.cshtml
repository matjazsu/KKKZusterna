@model List<KKK_Zusterna.Models.Rezultati>

@if (Model != null && Model.Count > 0)
{
    <div class="row-fluid">
        <div class="span12">
            <legend>Zadnji rezultati:</legend>    
        </div>
    </div>

    foreach (var rezultat in Model)
    {
        if (!string.IsNullOrEmpty(rezultat.URLFile))
        {
            <div class="row-fluid">
                <div class="span12">
                    @if (!string.IsNullOrEmpty(rezultat.FileName))
                    {
                        <a href="@Url.Content(rezultat.URLFile)"><i class="icon-chevron-right" style="margin-top: 1px"></i> @Url.Content(rezultat.FileName)</a>
                    }
                    else
                    {
                        <a href="@Url.Content(rezultat.URLFile)"><i class="icon-chevron-right" style="margin-top: 1px"></i> @Url.Content(rezultat.URLFile)</a>
                    }
                </div>
            </div>
        }
    }
    
    <div class="row-fluid">
        <div class="span12">
        </div>
    </div>
}