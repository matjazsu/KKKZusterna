@model List<KKK_Zusterna.Models.Tekmovanja>

@if (Model != null && Model.Count > 0)
{
    <div class="row-fluid">
        <div class="span12">
            <legend>Zadnja tekmovanja:</legend>    
        </div>
    </div>

    foreach (var tekmovanje in Model)
    {
        if (!string.IsNullOrEmpty(tekmovanje.URLFile))
        {
            <div class="row-fluid">
                <div class="span12">
                    @if (!string.IsNullOrEmpty(tekmovanje.FileName))
                    {
                        <a href="@Url.Content(tekmovanje.URLFile)"><i class="icon-chevron-right" style="margin-top: 1px"></i> @Url.Content(tekmovanje.FileName)</a>
                    }
                    else
                    {
                        <a href="@Url.Content(tekmovanje.URLFile)"><i class="icon-chevron-right" style="margin-top: 1px"></i> @Url.Content(tekmovanje.URLFile)</a>
                    }
                </div>
            </div>
        }
    }
    
    <div class="row-fluid">
        <div class="span12">
        </div>
    </div>
}